<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actions_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <LinearLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="@dimen/we_push_action_list_height"
        android:padding="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action1_native"
            android:maxWidth="140dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center|left"
            android:text="Action-1"
            android:textColor="@color/we_hard_black"
            android:paddingStart="@dimen/we_push_action_padding"
            android:paddingEnd="@dimen/we_push_action_padding"
            android:visibility="gone"
            android:fontFamily="sans-serif"
            android:textSize="14sp"/>

        <TextView
            android:maxWidth="140dp"
            android:layout_width="wrap_content"
            android:id="@+id/action2_native"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="4dp"
            android:fontFamily="sans-serif"
            android:paddingStart="@dimen/we_push_action_padding"
            android:paddingEnd="@dimen/we_push_action_padding"
            android:gravity="center|left"
            android:text="Action-2"
            android:textColor="@color/we_hard_black"
            android:visibility="gone"
            android:textSize="14sp"/>

        <TextView
            android:maxWidth="140dp"
            android:id="@+id/action3_native"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="4dp"
            android:gravity="center|left"
            android:text="Action-3"
            android:textColor="@color/we_hard_black"
            android:fontFamily="sans-serif"
            android:paddingStart="@dimen/we_push_action_padding"
            android:paddingEnd="@dimen/we_push_action_padding"
            android:visibility="gone"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/action1_adaptive"
            android:maxWidth="140dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center|left"
            android:text="Action-1"
            android:textColor="@color/we_black"
            android:paddingStart="@dimen/we_push_action_padding"
            android:paddingEnd="@dimen/we_push_action_padding"
            android:visibility="gone"
            android:fontFamily="sans-serif"
            android:textSize="14sp"/>

        <TextView
            android:maxWidth="140dp"
            android:layout_width="wrap_content"
            android:id="@+id/action2_adaptive"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="4dp"
            android:fontFamily="sans-serif"
            android:paddingStart="@dimen/we_push_action_padding"
            android:paddingEnd="@dimen/we_push_action_padding"
            android:gravity="center|left"
            android:text="Action-2"
            android:textColor="@color/we_black"
            android:visibility="gone"
            android:textSize="14sp"/>

        <TextView
            android:maxWidth="140dp"
            android:id="@+id/action3_adaptive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="4dp"
            android:gravity="center|left"
            android:text="Action-3"
            android:textColor="@color/we_black"
            android:fontFamily="sans-serif"
            android:paddingStart="@dimen/we_push_action_padding"
            android:paddingEnd="@dimen/we_push_action_padding"
            android:visibility="gone"
            android:textSize="14sp"/>

    </LinearLayout>

</FrameLayout>
