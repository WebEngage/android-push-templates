<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/we_notification_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/we_transparent">

    <ImageView
        android:id="@+id/we_notification_image2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/we_notification_image3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_alignBottom="@id/we_notification_image2"/>

    <LinearLayout
        android:id="@+id/push_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/we_notification_image2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/push_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/we_push_content_margin"
            android:paddingRight="@dimen/we_push_content_margin"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <include layout="@layout/pushbase" />

                <include layout="@layout/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    layout="@layout/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:id="@+id/we_notification_image4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/we_notification_bottom_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/we_push_content_margin" />

        <ImageView
            android:id="@+id/we_notification_image"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_marginTop="@dimen/we_push_image_margin_top"
            android:paddingStart="@dimen/we_push_banner_padding"
            android:paddingEnd="@dimen/we_push_banner_padding"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <include layout="@layout/push_actions" />
    </LinearLayout>

</RelativeLayout>