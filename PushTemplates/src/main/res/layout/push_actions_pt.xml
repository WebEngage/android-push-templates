<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actions_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="@dimen/we_push_action_list_height"
        android:padding="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action1_native"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Action-1"
            android:visibility="gone"
            style="@style/NotificationCTA"
            android:paddingStart="@dimen/we_push_action1_padding"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/action2_native"
            android:layout_height="match_parent"
            android:text="Action-2"
            android:visibility="gone"
            style="@style/NotificationCTA"
            />

        <TextView
            android:id="@+id/action3_native"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Action-3"
            android:visibility="gone"
            style="@style/NotificationCTA"
            />

        <TextView
            android:id="@+id/action1_adaptive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Action-1"
            android:visibility="gone"
            style="@style/NotificationCTAAdaptive"
            android:paddingStart="@dimen/we_push_action1_padding"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/action2_adaptive"
            android:layout_height="match_parent"
            android:text="Action-2"
            android:visibility="gone"
            style="@style/NotificationCTAAdaptive"
            />

        <TextView
            android:id="@+id/action3_adaptive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Action-3"
            android:visibility="gone"
            style="@style/NotificationCTAAdaptive"
            />

    </LinearLayout>

</FrameLayout>
